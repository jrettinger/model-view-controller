<div class="container">
    <div class="row g-4 justify-content-center py-5">
        <div class="col-md-8">
            <div class="bg-light border mb-5">
                <div class="d-flex justify-content-between bg-dark text-white px-2 pt-2 pb-1">
                    <h6>{{title}}</h6>
                    <small>Posted by {{postedby}} on {{date}}</small>
                </div>
                <div class="p-2">
                    {{content}}
                </div>
            </div>

            {{#if isLoggedIn}}
            {{#if comment}}
            <div class="border my-5 p-3">
                <p>{{comment}}</p>
                <span>{{commentedby}},{{cdate}}</span>
            </div>
            {{else}}
            <div class="border my-5 p-3">
                <form method="post" action="/blog-detail/{{id}}">
                    <p>Comment</p>
                    <textarea required name="comment" class="p-2" name="" id="" style="width:100%;" rows="3"></textarea>
                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            {{/if}}
            {{/if}}

             {{#each commentList}}
            <div class="border mb-2 p-3">
                <p>{{comment}}</p>
                <span>{{commentedby}}, {{date}}</span>
            </div>
            {{/each}}
        </div>
    </div>
</div>